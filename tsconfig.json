{
  "extends": "@tsconfig/node-lts/tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ESNext"],
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "resolveJsonModule": true,
    "rootDir": "./",
    "outDir": "./dist"
  },
  "include": ["knexfile.ts", "src/**/*", "tests/**/*"],
  "exclude": ["./dist", "./node_modules"]
}
