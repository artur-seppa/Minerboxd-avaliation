{
  "name": "minerboxd-ts",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx watch --clear-screen=false src/index.ts",
    "dev:bullmq:start": "npx tsx src/bullmq/worker.ts",
    "dev:db:create": "createdbjs minerboxd_development --user=postgres --password=postgres --host=127.0.0.1",
    "dev:db:migrate": "npm run knex migrate:latest",
    "dev:db:rollback": "npm run knex migrate:rollback",
    "dev:db:seed": "npm run knex seed:run",
    "test": "vitest run",
    "test:db:create": "createdbjs minerboxd_test --user=postgres --password=postgres --host=127.0.0.1",
    "test:db:migrate": "NODE_ENV=test npm run knex migrate:latest",
    "test:db:rollback": "NODE_ENV=test npm run knex migrate:rollback",
    "db:create_migration": "npm run knex migrate:make -x ts",
    "build": "tsc",
    "knex": "tsx ./node_modules/.bin/knex"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@bull-board/api": "^6.10.1",
    "@bull-board/fastify": "^6.10.1",
    "@fastify/jwt": "^9.0.2",
    "bcrypt": "^5.1.1",
    "bullmq": "^5.56.0",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.0",
    "knex": "^3.1.0",
    "nodemailer": "^6.9.16",
    "objection": "^3.1.5",
    "pg": "^8.13.1",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "zod": "^3.25.51"
  },
  "devDependencies": {
    "@tsconfig/node-lts": "^22.0.1",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^22.10.2",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.11.10",
    "light-my-request": "^6.4.0",
    "pgtools": "^1.0.1",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.2.2",
    "vitest": "^2.1.8"
  }
}
